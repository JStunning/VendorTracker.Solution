@{
  Layout = "_Layout";
}
<h1>Enter Order to Add to the @Model.Name</h1>
<form action="/vendors/@Model.Id/orders" method="post">
  <div class="form-group">
    <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
    <label for="orderTitle">Order Title</label>
    <input id="orderTitle" name="orderTitle" type="text" required>
    <label for="orderDescription">Order Description</label>
    <input id="orderDescription" name="orderDescription" type="text" required>
  </div>
  <button type="submit">Add</button>
</form>

<div class="footer">
  <a href="/">Return to Home</a>
  <a href="/vendors/@Model.Id/orders">View Orders</a>
</div>